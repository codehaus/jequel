<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="jequel" default="build.all">
    <!-- Compiler options -->

    <property name="dist" value="dist"/>
    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value=""/>
    <property name="compiler.max.memory" value="128m"/>

    <!-- Project Libraries -->

    <path id="library.spring.classpath">
        <pathelement location="${basedir}/lib/commons-logging.jar"/>
        <pathelement location="${basedir}/lib/spring-beans.jar"/>
        <pathelement location="${basedir}/lib/spring-jdbc.jar"/>
        <pathelement location="${basedir}/lib/spring-core.jar"/>
        <pathelement location="${basedir}/lib/spring-tx.jar"/>
    </path>

    <path id="library.test.classpath">
        <pathelement location="${basedir}/lib/junit.jar"/>
        <pathelement location="${basedir}/lib/hsqldb.jar"/>
    </path>


    <path id="library.ant.classpath">
        <pathelement location="${basedir}/lib/ant.jar"/>
    </path>

    <path id="library.schemacrawler.classpath">
        <pathelement location="${basedir}/lib/schemacrawler-5.3.jar"/>
    </path>
    <!-- Modules -->

    <import file="${basedir}/module_springjdbc.xml"/>
    <import file="${basedir}/module_jequel.xml"/>
    <import file="${basedir}/module_test.xml"/>
    <import file="${basedir}/module_alexa.xml"/>
    <import file="${basedir}/module_ant.xml"/>


    <target name="clean.all"
            depends="clean.module.springjdbc, clean.module.jequel, clean.module.test, clean.module.alexa, clean.module.ant"
            description="cleanup all"/>

    <target name="build.all"
            depends="clean.all, compile.module.springjdbc, compile.module.jequel, compile.module.test, compile.module.alexa, compile.module.ant"
            description="build all"/>

    <target name="src.jar" description="build src.jar">
        <jar basedir="jequel/src" update="false" jarfile="dist/jequel-src.jar"/>
        <jar basedir="ant/src" update="true" jarfile="dist/jequel-src.jar"/>
        <jar basedir="springjdbc/src" update="true" jarfile="dist/jequel-src.jar"/>
        <jar basedir="unit/src" update="true" jarfile="dist/jequel-src.jar"/>
        <jar basedir="unit/test" update="true" jarfile="dist/jequel-src.jar"/>
    </target>


    <target name="prepare_upload" depends="springjdbc.jar, springjdbc.javadoc, jar, javadoc, ant-jequel.jar, src.jar"/>
</project>